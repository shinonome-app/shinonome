<%= form_with(model: [:admin, @person]) do |form| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "件") %>の入力エラーがあります:</h2>
      <ul>
        <% @person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field py-2">
    <%= form.label :last_name_kana, "姓読み" %>
    <%= form.text_field :last_name_kana, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :sortkey, "姓読みソート用" %>
    <%= form.text_field :sortkey, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :last_name, "姓" %>
    <%= form.text_field :last_name, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :last_name_en, "姓ローマ字" %>
    <%= form.text_field :last_name_en, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :first_name_kana, "名読み" %>
    <%= form.text_field :first_name_kana, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :sortkey2, "名読みソート用" %>
    <%= form.text_field :sortkey2, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :first_name, "名" %>
    <%= form.text_field :first_name, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :first_name_en, "名ローマ字" %>
    <%= form.text_field :first_name_en, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :born_on, "生年月日" %>
    <%= form.text_field :born_year, maxlength: 4 %>年
    <%= form.date_select :born_on, include_blank: true, order: [:month, :day], date_separator: "月", month_format_string: "%<number>d" %>日
  </div>
  <div class="field py-2">
    <%= form.label :died_on, "没年月日" %>
    <%= form.text_field :died_year, maxlength: 4 %>年
    <%= form.date_select :died_on, include_blank: true, order: [:month, :day], date_separator: "月", month_format_string: "%<number>d" %>日
  </div>
  <div class="field py-2">
    <%= form.label :copyright_flag,"著作権フラグ" %>
    <%= form.select :copyright_flag, [["なし", 0], ["あり", 1]], {include_blank: false}, {class: 'text-gray-800'} %>
  </div>
  <div class="field py-2">
    <%= form.label :email, "email" %>
    <%= form.text_field :email, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :url, "URL" %>
    <%= form.text_field :url, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :description, "人物について" %>
    <%= form.text_area :description, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="field py-2">
    <%= form.label :note, "備考" %>
    <%= form.text_area :note, class: "w-full border border-gray-800 p-1" %>
  </div>
  <div class="actions py-4">
    <%= form.submit "登録", class: 'btn-normal' %>
  </div>
<% end %>
