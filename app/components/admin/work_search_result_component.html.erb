<div class="p-4 w-full bg-white ml-4 font-light mb-5 rounded">
  <h2 class="text-2xl">作品一覧</h2>
  <table>
    <thead>
      <tr>
        <th>作品ID</th>
        <th>作品名</th>
        <th>副題</th>
        <th>著者</th>
        <th>翻訳者</th>
        <th>仮名遣い</th>
        <th>状態</th>
        <th>状態の開始日</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <tr>
          <td><%= work.id %></td>
          <td><%= link_to work.title, admin_work_path(work) %></td>
          <td><%= work.subtitle %></td>
          <td><%= work.author_text %></td>
          <td><%= work.translator_text %></td>
          <td><%= work.kana_type.name %></td>
          <td><%= work.work_status.name %></td>
          <td><%= work.started_on %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_nav(@pagy) %>
</div>
