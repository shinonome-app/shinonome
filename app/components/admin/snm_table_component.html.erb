<table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
  <thead class="text-center bg-[#f8fafc]">
    <tr class="h-10 even:bg-[#f8fafc]">
      <% @header.each do |head_col| %>
      <th class="whitespace-nowrap"><%= head_col %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @body.each do |body_cols| %>
    <tr class="h-10 even:bg-[#f8fafc]">
      <% body_cols.each do |body_col| %>
        <td class="text-center py-3 px-5"><%= body_col %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
