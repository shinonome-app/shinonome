<table class="w-full text-left text-sm lg:text-base border borger-ab_gray">
  <tbody>
  <% @rows.each do |cols| %>
  <tr class="h-10 odd:bg-[#f8fafc]">
    <th class="pl-5 w-[20%] whitespace-nowrap">
      <%= cols[0] %>
    </th>
    <% cols[1..].each do |col| %>
    <td class="py-0 px-5">
      <%= col %>
    </td>
    <% end %>
  </tr>
  <% end %>
  </tbody>
</table>
