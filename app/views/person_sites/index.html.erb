<p id="notice"><%= notice %></p>

<h1>Person Sites</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_sites.each do |person_site| %>
      <tr>
        <td><%= person_site.person_id %></td>
        <td><%= person_site.site_id %></td>
        <td><%= link_to 'Show', person_site %></td>
        <td><%= link_to 'Edit', edit_person_site_path(person_site) %></td>
        <td><%= link_to 'Destroy', person_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person Site', new_person_site_path %>
