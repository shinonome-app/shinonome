<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Name kana</th>
      <th>Email</th>
      <th>Url</th>
      <th>Note</th>
      <th>User</th>
      <th>Sortkey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.name_kana %></td>
        <td><%= worker.email %></td>
        <td><%= worker.url %></td>
        <td><%= worker.note %></td>
        <td><%= worker.user_id %></td>
        <td><%= worker.sortkey %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

