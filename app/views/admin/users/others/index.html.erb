<div class="w-full md:w-2/3">
  <snm-headline h="h1">管理者の追加・削除</snm-headline>

  <snm-headline h="h2">管理者追加</snm-headline>

  <%= form_with(model: @user, url: admin_users_others_path, method: "post") do |form| %>
    <% if @user.errors.any? %>
    <%= tag.snm_message_bar "入力エラーがあります", level: "alert" %>
    <% end %>
    <% errors = @user.errors %>
    <%= render(Admin::SnmTextFieldComponent.new(form:, name: :username, label: "ユーザー名", errors:)) %>
    <%= render(Admin::SnmTextFieldComponent.new(form:, name: :email, label: "email", errors:)) %>
    <%= render(Admin::SnmTextFieldComponent.new(form:, name: :password, label: "パスワード", errors:)) %>
    <%= render(Admin::SnmTextFieldComponent.new(form:, name: :password_confirmation, label: "パスワード(確認用)", errors:)) %>
    <div class="mt-2 flex">
      <%= render(Admin::SubmitComponent.new(form:, name: "submit", value: "登録する")) %>
    </div>
  <% end %>

  <snm-headline h="h2">管理者一覧</snm-headline>
  <%= render(Admin::UsersTableComponent.new(users: @users, pagy: @pagy)) %>
</div>
