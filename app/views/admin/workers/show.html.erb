  <p id="notice"><%= notice %></p>
  <h1>工作員データ</h1>
  <p>
    <strong>工作員ID:</strong>
    <%= @worker.id %>
  </p>
  <p>
    <strong>姓名読み:</strong>
    <%= @worker.name_kana %>
  </p>
  <p>
    <strong>ソート用読み:</strong>
    <%= @worker.sortkey %>
  </p>
  <p>
    <strong>姓名:</strong>
    <%= @worker.name %>
  </p>
  <p>
    <strong>email:</strong>
    <%= @worker.email %>
  </p>
  <p>
    <strong>URL:</strong>
    <%= @worker.url %>
  </p>
  <p>
    <strong>備考:</strong>
    <%= @worker.note %>
  </p>
