<%= form_with(model: [:admin, site]) do |form| %>
  <% if site.errors.any? %>
  <%= tag.snm_message_bar "入力エラーがあります", level: "alert" %>
  <% end %>
  <% errors = site.errors %>
  <%= render(Admin::SnmTextFieldComponent.new(form:, name: :name, label: "関連サイト名", errors:)) %>
  <%= render(Admin::SnmTextFieldComponent.new(form:, name: :url, label: "URL", errors:)) %>
  <%= render(Admin::SnmTextFieldComponent.new(form:, name: :owner_name, label: "運営者名", errors:)) %>
  <%= render(Admin::SnmTextFieldComponent.new(form:, name: :email, label: "email", errors:)) %>
  <%= render(Admin::SnmTextAreaComponent.new(form:, name: :note, label: "備考", errors:)) %>
    <%= form.fields_for :work_sites do |work_site| %>
      <%= work_site.hidden_field :work_id %>
    <% end %>
  <div class="mt-2 flex">
    <%= render(Admin::SubmitComponent.new(form:, name: "submit", value: "登録する")) %>
  </div>
<% end %>
