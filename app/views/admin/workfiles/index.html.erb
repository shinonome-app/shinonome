<div class="p-4 w-full bg-white ml-4 font-light mb-5 rounded">
  <h1 class="text-2xl py-4">作品ファイル一覧</h1>
  <table>
    <thead>
      <tr>
        <th>Work</th>
        <th>Filetype</th>
        <th>Compresstype</th>
        <th>Filesize</th>
        <th>User</th>
        <th>Url</th>
        <th>Filename</th>
        <th>Opened on</th>
        <th>revision_count</th>
        <th>File encoding</th>
        <th>Charset</th>
        <th>Note</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @workfiles.each do |workfile| %>
        <tr>
          <td><%= workfile.work_id %></td>
          <td><%= workfile.filetype_id %></td>
          <td><%= workfile.compresstype_id %></td>
          <td><%= workfile.filesize %></td>
          <td><%= workfile.user_id %></td>
          <td><%= workfile.url %></td>
          <td><%= link_to workfile.filename, admin_work_workfile_path(workfile.work, workfile) %></td>
          <td><%= workfile.opened_on %></td>
          <td><%= workfile.revision_count %></td>
          <td><%= workfile.file_encoding_id %></td>
          <td><%= workfile.charset_id %></td>
          <td><%= workfile.note %></td>
          <td><%= link_to 'Edit', edit_admin_work_workfile_path(workfile.work, workfile) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
