<%= form_with(model: [:admin, workfile.work, workfile]) do |form| %>
  <% if workfile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(workfile.errors.count, "error") %> prohibited this workfile from being saved:</h2>
      <ul>
        <% workfile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :work_id %>
  <div class="field">
    <%= form.label :filetype_id %>
    <%= form.collection_select :filetype_id, Filetype.order(:id).all, :id, :name, {prompt: '選択してください'}, {class: 'text-gray-800'} %>
  </div>
  <div class="field">
    <%= form.label :compresstype_id %>
    <%= form.collection_select :compresstype_id, Compresstype.order(:id).all, :id, :name, {prompt: '選択してください'}, {class: 'text-gray-800'} %>
  </div>
  <div class="field">
    <%= form.label :filesize %>
    <%= form.text_field :filesize %>
  </div>
  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>
  <div class="field">
    <%= form.label :opened_on %>
    <%= form.date_select :opened_on %>
  </div>
  <div class="field">
    <%= form.label :revision_count %>
    <%= form.text_field :revision_count %>
  </div>
  <div class="field">
    <%= form.label :file_encoding_id %>
    <%= form.collection_select :file_encoding_id, FileEncoding.order(:id).all, :id, :name, {prompt: '選択してください'}, {class: 'text-gray-800'} %>
  </div>
  <div class="field">
    <%= form.label :charset_id %>
    <%= form.collection_select :charset_id, Charset.order(:id).all, :id, :name, {prompt: '選択してください'}, {class: 'text-gray-800'} %>
  </div>
  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>
  <div class="field">
    <%= form.label :workdata %>
    <%= form.file_field :workdata %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
