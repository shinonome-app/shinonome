<div class="p-4 w-full bg-white ml-4 font-light mb-5 rounded">
<p id="notice"><%= notice %></p>
<h1 class="text-2xl py-4">申請内容確認</h1>

    <h2 class="text-xl py-2">【作品データ】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>入力データ</th>
      </tr>
      <tr>
        <th>作品名読み</th>
        <td><%= @receipt.title_kana %></td>
      </tr>
      <tr>
        <th>作品名</th>
        <td><%= @receipt.title %></td>
      </tr>
      <tr>
        <th>副題読み</th>
        <td><%= @receipt.subtitle_kana %></td>
      </tr>
      <tr>
        <th>副題</th>
        <td><%= @receipt.subtitle %></td>
      </tr>
      <tr>
        <th>原題</th>
        <td><%= @receipt.original_title %></td>
      </tr>
      <tr>
        <th>仮名遣い種別</th>
        <td><%= @receipt.kana_type_id %></td>
      </tr>
      <tr>
        <th>初出</th>
        <td><%= @receipt.first_appearance %></td>
      </tr>
      <tr>
        <th>作品について</th>
        <td class="border border-gray-800 p-1" rows="15"><%= @receipt.memo %></td>
      </tr>
      <tr>
        <th>備考</th>
        <td class="border border-gray-800 p-1" rows="15"><%= @receipt.note %></td>
      </tr>
      <tr>
        <th>状態</th>
        <td><%= @receipt.work_status_id %></td>
      </tr>
      <tr>
        <th>状態の開始日</th>
        <td><%= @receipt.started_on %></td>
      </tr>
      <tr>
        <th>著作権</th>
        <td><%= @receipt.copyright_flag %></td>
      </tr>
    </table>

    <hr class="border-1 my-4">

    <h2 class="text-xl">【著者データ】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>入力データ</th>
      </tr>
      <tr>
        <th>人物ID</th>
        <td class="p-1"><%= @receipt.person_id %></td>
      </tr>
      <tr>
        <th>姓読み</th>
        <td class="p-1"><%= @receipt.last_name_kana %></td>
      </tr>
      <tr>
        <th>姓</th>
        <td class="p-1"><%= @receipt.last_name %></td>
      </tr>
      <tr>
        <th>姓ローマ字</th>
        <td class="p-1"><%= @receipt.last_name_en %></td>
      </tr>
      <tr>
        <th>名読み</th>
        <td class="p-1"><%= @receipt.first_name_kana %></td>
      </tr>
      <tr>
        <th>名</th>
        <td class="p-1"><%= @receipt.first_name %></td>
      </tr>
      <tr>
        <th>名ローマ字</th>
        <td class="p-1"><%= @receipt.first_name_en %></td>
      </tr>
      <tr>
        <th>備考</th>
        <td class="p-1"><%= @receipt.person_note %></td>
      </tr>
    </table>

    <hr class="border-1 my-4">

    <h2 class="text-xl">【入力者データ】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>入力データ</th>
      </tr>
      <tr>
        <th>工作員ID</th>
        <td>
          <%= @receipt.worker_id %>
        </td>
      </tr>
      <tr>
        <th>工作員名読み</th>
        <td><%= @receipt.worker_kana %></td>
      </tr>
      <tr>
        <th>工作員名</th>
        <td><%= @receipt.worker_name %></td>
      </tr>
      <tr>
        <th>e-mail</th>
        <td><%= @receipt.email %></td>
      </tr>
      <tr>
        <th>ホームページ</th>
        <td><%= @receipt.url %></td>
      </tr>
    </table>


    <h2 class="text-xl">【底本データ】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>入力データ</th>
      </tr>
      <tr>
        <th>底本名</th>
        <td><%= @receipt.original_book_title %></td>
      </tr>
      <tr>
        <th>出版社名</th>
        <td><%= @receipt.publisher %></td>
      </tr>
      <tr>
        <th>初版発行年</th>
        <td><%= @receipt.first_pubdate %></td>
      </tr>
      <tr>
        <th>入力に使用する版</th>
        <td><%= @receipt.input_edition %></td>
      </tr>
      <tr>
        <th>備考</th>
        <td><%= @receipt.original_book_note %></td>
      </tr>
      <tr>
        <th>底本の親本名</th>
        <td><%= @receipt.original_book_title2 %></td>
      </tr>
      <tr>
        <th>底本の親本出版社名</th>
        <td><%= @receipt.publisher2 %></td>
      </tr>
      <tr>
        <th>底本の親本初版発行年</th>
        <td><%= @receipt.first_pubdate2 %></td>
      </tr>
    </table>

    <hr class="border-1 my-4">

    <%= link_to '戻る', admin_receipts_path, class: "btn-normal" %>

</div>
