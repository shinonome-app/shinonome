<table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
  <thead class="bg-[#f8fafc]">
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <th class="whitespace-nowrap">
        項目名
      </th>
      <th class="whitespace-nowrap">
        入力データ
      </th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <td class="odd:w-[25%] py-3 px-5">
        耕作員ID
      </td>
      <td class="odd:w-[25%] py-3 px-5">
        <%= form.hidden_field :worker_id, value: receipt_form.worker_id || params.dig(:receipt, :worker_id) %>
        <%= receipt_form.worker_id %>
      </td>
    </tr>
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <td class="odd:w-[25%] py-3 px-5">
        耕作員名読み
      </td>
      <td class="odd:w-[25%] py-3 px-5">
        <%= form.hidden_field :worker_kana %>
        <%= receipt_form.worker_kana %>
      </td>
    </tr>
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <td class="odd:w-[25%] py-3 px-5">
        耕作員名
      </td>
      <td class="odd:w-[25%] py-3 px-5">
        <%= form.hidden_field :worker_name %>
        <%= receipt_form.worker_name %>
      </td>
    </tr>
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <td class="odd:w-[25%] py-3 px-5">
        e-mail
      </td>
      <td class="odd:w-[25%] py-3 px-5">
        <%= form.hidden_field :email %>
        <%= receipt_form.email %>
      </td>
    </tr>
    <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
      <td class="odd:w-[25%] py-3 px-5">
        ホームページ
      </td>
      <td class="odd:w-[25%] py-3 px-5">
        <%= link_to(receipt_form.url, receipt_form.url) %>
      </td>
    </tr>
  </tbody>
</table>
