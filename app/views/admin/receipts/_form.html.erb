    <%= form.text_area :person_note %>
  </div>
  <div class="field">
    <%= form.label :worker_kana %>
    <%= form.text_area :worker_kana %>
  </div>
  <div class="field">
    <%= form.label :worker_name %>
    <%= form.text_area :worker_name %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_area :email %>
  </div>
  <div class="field">
    <%= form.label :url %>
    <%= form.text_area :url %>
  </div>
  <div class="field">
    <%= form.label :original_book_title %>
    <%= form.text_area :original_book_title %>
  </div>
  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_area :publisher %>
  </div>
  <div class="field">
