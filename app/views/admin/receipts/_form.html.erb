    <%= form.text_area :person_id %>
  </div>
  <div class="field">
    <%= form.label :worker_id %>
    <%= form.text_area :worker_id %>
  </div>
  <div class="field">
    <%= form.label :register_status %>
    <%= form.number_field :register_status %>
  </div>
  <div class="field">
    <%= form.label :original_book_note %>
    <%= form.text_area :original_book_note %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
