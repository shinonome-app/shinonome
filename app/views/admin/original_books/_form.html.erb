<%= form_with(model: [:admin, @work, original_book]) do |form| %>
  <% if original_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(original_book.errors.count, "error") %> prohibited this original_book from being saved:</h2>
      <ul>
        <% original_book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher %>
  </div>
  <div class="field">
    <%= form.label :first_pubdate %>
    <%= form.text_field :first_pubdate %>
  </div>
  <div class="field">
    <%= form.label :input_edition %>
    <%= form.text_field :input_edition %>
  </div>
  <div class="field">
    <%= form.label :proof_edition %>
    <%= form.text_field :proof_edition %>
  </div>
  <div class="field">
    <%= form.label :worktype_id %>
    <%= form.collection_select :worktype_id, Worktype.order(:id).all, :id, :name, {prompt: '選択してください'}, {class: 'text-gray-800'}  %>
  </div>
  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
