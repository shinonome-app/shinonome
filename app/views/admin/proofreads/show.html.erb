<div class="w-full md:w-2/3">
  <%= snm_headline h: 'h1' do %>送付内容確認<% end %>

  <div class="flex flex-col gap-5 mb-5">

    <%= snm_headline h: 'h2' do %>校正者データ<% end %>

    <table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
      <thead class="bg-[#f8fafc]">
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <th class="whitespace-nowrap">
            項目名
          </th>
          <th class="whitespace-nowrap">
            入力データ
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            耕作員ID
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @worker.id %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            耕作員読み
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @worker.name_kana %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            耕作員名
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @worker.name %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            e-mail
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @worker_secret.email %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            ホームページ
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @worker_secret.url %>
          </td>
        </tr>
      </tbody>
    </table>

    <%= snm_headline h: 'h2' do %>校正者からの連絡事項<% end %>

    <table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
      <thead class="bg-[#f8fafc]">
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <th class="w-48">項目名</th>
          <th>データ</th>
        </tr>
      </thead>
      <tbody>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
        <td class="odd:w-[25%] py-3 px-5">
          連絡事項
        </td>
        <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.memo %>
          </td>
        </tr>
      </tbody>
    </table>

    <%= snm_headline h: 'h2' do %>選択された作品<% end %>

    <table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
      <thead class="bg-[#f8fafc]">
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <th class="w-48">項目名</th>
          <th>データ</th>
        </tr>
      </thead>
      <tbody>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            著者
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @work.author_text %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
          <td class="odd:w-[25%] py-3 px-5">
            作品ID
          </td>
          <td class="odd:w-[25%] py-3 px-5">
          <%= @work.id %>
        </td>
      </tr>
      <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
        <td class="odd:w-[25%] py-3 px-5">
          作品名<br>副題
        </td>
        <td class="odd:w-[25%] py-3 px-5">
          <%= @work.title %><br>
          <%= @work.subtitle %>
        </td>
      </tr>
      <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
        <td class="odd:w-[25%] py-3 px-5">
          状態
        </td>
        <td class="odd:w-[25%] py-3 px-5">
          <%= @work.work_status.name %>
        </td>
      </tr>
      <tr>
        <td class="odd:w-[25%] py-3 px-5">
          底本（コピー）
        </td>
        <td class="odd:w-[25%] py-3 px-5">
          <% if @proofread.need_copy? %>
          要
          <% else %>
          不要
          <% end %>
        </td>
      </tr>
      <tr class="h-10 even:bg-[#f8fafc] whitespace-nowrap">
        <td class="odd:w-[25%] py-3 px-5">
          プリントアウト
        </td>
        <td class="odd:w-[25%] py-3 px-5">
          <% if @proofread.need_print? %>
          要
          <% else %>
          不要
          <% end %>
        </td>
      </tr>
    </table>

    <%= snm_headline h: 'h2' do %>校正ファイルデータ<% end %>

    <table class="table-auto w-full text-sm lg:text-base border borger-ab_gray">
      <thead class="bg-[#f8fafc]">
        <tr class="h-10 even:bg-[#f8fafc]">
          <th class="whitespace-nowrap">
            項目名
          </th>
          <th class="whitespace-nowrap">
            入力データ
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            ファイル
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.filename %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            ファイル形式
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.filetype&.name %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            圧縮形式
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.compresstype&.name %>
          </td>
        </tr>

        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            ファイルサイズ
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.filesize %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            初登録日
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.registered_on %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            最終更新日
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.last_updated_on %>
          </td>
        </tr>

        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            修正回数
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.revision_count %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            ファイルエンコーディング
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.file_encoding&.name %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            文字集合
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= @proofread.workfile&.charset&.name %>
          </td>
        </tr>
        <tr class="h-10 even:bg-[#f8fafc]">
          <td class="odd:w-[25%] py-3 px-5 whitespace-nowrap">
            備考
          </td>
          <td class="odd:w-[25%] py-3 px-5">
            <%= safe_html(nl2br(@proofread.workfile&.workfile_secret&.memo)) %>
          </td>
        </tr>
      </tbody>
    </table>

    <hr class="border-1 my-4">

  <div class="mt-2 flex gap-2">
    <%= snm_link '戻る', href: admin_proofreads_path, button_style: 'secondary' %>
  </div>
</div>
