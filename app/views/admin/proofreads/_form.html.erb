    <% work = proofread.work %>
    <% if proofread.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proofread.errors.count, "件") %>の入力エラーがあります:</h2>
      <ul>
        <% proofread.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <h2 class="text-xl py-2">【選択された作品】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>データ</th>
      </tr>
      <tr>
        <th>著者</th>
        <td><%= work.author_text %></td>
      </tr>
      <tr>
        <th>
          作品ID
        </th>
        <td>
          <%= work.id %>
        </td>
      </tr>
      <tr>
        <th>作品名<br />副題</th>
        <td>
          <%= work.title %><br />
          <%= work.subtitle %>
        </td>
      </tr>
      <tr>
        <th>状態</th>
        <td><%= work.work_status.name %></td>
      </tr>
      <tr>
        <th>底本（コピー）</th>
        <td>
          <% if proofread.need_copy? %>
          要
          <% else %>
          不要
          <% end %>
        </td>
      </tr>
      <tr>
        <th>プリントアウト</th>
        <td>
          <% if proofread.need_print? %>
          要
          <% else %>
          不要
          <% end %>
        </td>
      </tr>
    </table>

    <h2 class="text-xl py-2">【送付先】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>データ</th>
      </tr>
      <tr>
        <th>送付先</th>
        <td><%= proofread.address %></td>
      </tr>
    </table>

    <h2 class="text-xl py-2">【校正者からの連絡事項】</h2>

    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>データ</th>
      </tr>
      <tr>
        <th>連絡事項</th>
        <td><%= proofread.memo %></td>
      </tr>
    </table>

    <h2 class="text-xl py-2">【校正者データ】</h2>
    <% if @worker.id.present? %>
    <%= render 'worker_show', proofread: @proofread %>
    <% else %>
    <%= render 'worker_form', proofread: @proofread %>
    <% end %>

    <h2 class="text-xl">【底本データ】</h2>

<%= form_with(model: [:admin, proofread], url: admin_proofreads_preview_path, data: { turbo: false } ) do |form| %>
    <table class="w-full">
      <tr>
        <th class="w-48">項目名</th>
        <th>入力データ</th>
      </tr>
      <tr>
        <th>底本名</th>
        <td><%= form.text_field :person_id, class: "w-full p-1" %></td>
      </tr>
      <tr>
        <th>出版社名</th>
        <td><%= form.text_field :last_name_kana, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>初版発行年</th>
        <td><%= form.text_field :last_name, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>入力に使用した版</th>
        <td><%= form.text_field :last_name_en, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>校正に使用する版</th>
        <td><%= form.text_field :first_name_kana, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>底本の親本名</th>
        <td><%= form.text_field :first_name, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>底本の親本出版社名</th>
        <td><%= form.text_field :first_name_en, class: "w-full p-1"  %></td>
      </tr>
      <tr>
        <th>底本の親本出版発行年</th>
        <td><%= form.text_area :person_note, class: "w-full p-1"  %></td>
      </tr>
    </table>


    <hr class="border-1 my-4">

    <%= form.submit '関連付ける', class: "btn-normal" %>
    <%= form.submit '戻る', formaction: admin_proofreads_path, formmethod: :get, class: "btn-normal" %>
    <%= form.submit '削除', class: "btn-normal", formaction: admin_proofread_path, formmethod: :delete %>
<% end %>
