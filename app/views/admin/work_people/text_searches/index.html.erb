<div class="p-4 w-full bg-white ml-4 font-light mb-5 rounded">
  <p id="notice"><%= notice %></p>
  <h1 class="text-2xl py-4">人物検索結果一覧</h1>

  <table>
    <thead>
      <tr>
        <th>人物ID</th>
        <th>姓名</th>
        <th>読み</th>
        <th>著作権</th>
        <th>他の名前</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td>
            <%= person.id %>
          </td>
          <td>
            <%= link_to admin_person_path(person) do %>
              <%= person.last_name %>
              <%= person.first_name %>
            <% end %>
          </td>
          <td>
            <%= person.last_name_kana %>
            <%= person.first_name_kana %>
          </td>
          <td><%= person.copyright_text %></td>
          <td>
            <% person.other_people.each do |other_person| %>
              →<%= link_to other_person.name, admin_person_path(other_person) %>
            <% end %>
          </td>
          <td class="px-2">
            <%= form_with(url: admin_work_work_people_binds_path, method: 'post', data: { turbo: false }) do |form| %>
            <%= form.hidden_field :person_id, value: person.id %>
            <%= form.collection_select :role_id, Role.order(:id).all, :id, :name %>として
            <%= form.submit '関連づける', class: 'btn-normal' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_nav(@pagy) %>

  <div class="py-4">
    <%= link_to '戻る', new_admin_work_work_person_path, class: 'btn-normal py-2' %>
  </div>
</div>
