<p id="notice"><%= notice %></p>

<h1>Worker Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worker_roles.each do |worker_role| %>
      <tr>
        <td><%= worker_role.name %></td>
        <td><%= link_to 'Show', worker_role %></td>
        <td><%= link_to 'Edit', edit_worker_role_path(worker_role) %></td>
        <td><%= link_to 'Destroy', worker_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

